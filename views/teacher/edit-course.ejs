<% layout('boilerplate') %>


<div class='container'>
  <div class='row'>
    <div class='col-lg-6 col-md-offset-3'>
      <h1 style='color: grey'>Edit Course</h1>
      <form role='form' method='post'>
        <div class='form-group'>
          <label for='name' style='color: grey'>Title:</label>
          <input type='text' class='form-control' name='title' id='title'  />
        </div>

        <div class='form-group'>
          <label for='name' style='color: grey'>Price:</label>
          <input type='text' class='form-control' name='Price' id='Price'   />
        </div>

        <div class='form-group'>
          <label for='name' style='color: grey'>Description:</label>
          <input type='text' class='form-control' name='desc' id='desc'   />
        </div>

        <div class='form-group'>
          <label for='name' style='color: grey'>Wistia ID:</label>
          <input type='text' class='form-control' name='wistiaId' id='wistiaId'  />
        </div>

        <button type='submit' class='btn btn-success'>Submit</button>
      </form>
    </div>
  </div>
</div>
